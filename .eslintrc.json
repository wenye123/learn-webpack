{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommendedt", "plugin:vue/vue3-essential"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "vue"],
  "rules": {},
  "overrides": [
    {
      "files": ["script/**/*.{ts,js}"],
      "env": { "node": true },
      "parserOptions": {
        "sourceType": "script"
      }
    },
    {
      "files": ["src/**/*.ts"],
      "parser": "@typescript-eslint/parser"
    }
  ]
}
